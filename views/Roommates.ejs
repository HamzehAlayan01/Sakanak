     function redirectToWhatsApp(phoneNumber) {
  var formattedPhoneNumber = phoneNumber.replace(/\D/g, '');
  
  var whatsappURL = 'https://api.whatsapp.com/send?phone=' + formattedPhoneNumber;
  
  var isWhatsAppAppInstalled = /WhatsApp/.test(navigator.userAgent);

  if (isWhatsAppAppInstalled) {
    window.location.href = 'whatsapp://send?phone=' + formattedPhoneNumber;
  } else {
    window.open(whatsappURL);
  }
}
    </script>
