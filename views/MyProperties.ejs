                              <span aria-hidden="true">&laquo;</span>
                            </a>
                          </li>
                        <% } %>
                        <% for (let i = 1; i <= totalPages; i++) { %>
                          <li class="<%= currentPage == i ? 'active' : '' %>"><a href="/MyProperties?page=<%= i %>"><%= i %></a></li>
                        <% } %>
                        <% if (currentPage < totalPages) { %>
                          <li>
                            <a href="/MyProperties?page=<%= currentPage + 1 %>" aria-label="Next">
