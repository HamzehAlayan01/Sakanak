                            <div class="button-container aa-properties-detail">

                              <button type="submit" class="xd btn btn-secondary mt-3  btn-rounded waves-effect w-md waves-light"><a href="/editProperty/<%= property._id %>">Edit</a></button>

                            
                              <form id="deleteForm" action="/deleteProperty/<%= property._id %>" method="POST" class="d-inline">
                                <button type="submit" class="xd btn btn-dark mt-3 ml-2 btn-rounded waves-effect w-md waves-light" onclick="confirmDelete('<%= property._id %>')">Delete</button>
                              </form>

                              <a class="xd aa-secondary-btn" href="/properties-detail/<%= property._id %>">View Details</a>
                            </div>
                          </div>
                      </article>
                    </div>
